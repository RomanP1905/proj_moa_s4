<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context="com.example.roman.project1.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:background="#fff">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="PixaFoto"
            android:scaleType="fitXY"
            android:src="@drawable/pixa"
/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Over Pixa"
            android:textColor="#555555"
            android:textSize="22sp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pixa is een bedrijf dat applicaties ontwikkelt en websites designt. Ze doen dit bij hun eigen partnerbedrijf Reuver Belastingconsulenten en ook bij externe klanten."
            android:textSize="14sp" />



    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/bedrijf_naam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contactgegevens"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/tel_nr"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/bedrijf_naam"
            android:layout_marginTop="8dp"
            android:contentDescription="TelefoonNummer"
            android:scaleType="centerInside"
            android:src="@drawable/ic_call_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bedrijf_naam"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tel_nr"
            android:autoLink="phone"
            android:text="+31541662883"/>

        <ImageView
            android:id="@+id/adres_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tel_nr"
            android:layout_marginTop="8dp"
            android:contentDescription="adres"
            android:scaleType="centerInside"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/text_view_adres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tel_nr"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/adres_image"
            android:text="Parallelstraat 50, Oldenzaal"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stagebeschrijving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Over mijn stage bij Pixa"
            android:textColor="#555555"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Bij mijn stage was ik bezig met een grote variÃ«teit van taken. Het grootste deel was ik bezig met websites maken en onderhouden. Ook waren er veel projecten waar ik functies schreef in PHP."
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>

</ScrollView>
